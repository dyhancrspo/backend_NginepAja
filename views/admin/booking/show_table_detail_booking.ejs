<!-- DataTales Example -->
<div class="card shadow mb-4">
	<div class="card-header py-3 animated--grow-in">
		<div class="card shadow mb-4 mt-2">
			<div class="card-header py-3">
				<a href="/admin/booking" class="btn btn-warning btn-icon-split">
					<span class="icon text-white-50">
						<i class="fas fa-exclamation-triangle"></i>
					</span>
					<span class="text">Back</span>
				</a>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-md-4 table-bordered">
						<img
							src="http://localhost:3000/<%= booking.payments.proofPayment %>"
							alt="image"
							style="width: 100%; display: block"
						/>
					</div>
					<div class="col-md-8">
						<div class="table-responsive">
							<table
								class="table table-bordered border-bottom-success"
								id="dataTableActivity"
								width="100%"
								cellspacing="0"
							>
								<thead>
									<tr>
										<th>Member Name</th>
										<th>Total Payment</th>
										<th>Bank From</th>
										<th>Title</th>
									</tr>
								</thead>
								<tbody>
									<tr>
										<td>
											<%= booking.memberId.firstName %> <%=
											booking.memberId.lastName %>
										</td>
										<td>Rp <%= booking.total %></td>
										<td><%= booking.payments.bankFrom %></td>
										<td><%= booking.itemId.title %></td>
									</tr>
								</tbody>
							</table>
						</div>
						<div class="row" style="margin: 10px 0 0 285px">
							<% if(booking.payments.status == 'Proses' ||
							booking.payments.status == 'Process' ) { %>
							<form
								action="/admin/booking/<%= booking.id%>/confirmation?_method=PUT"
								method="POST"
							>
								<button
									type="submit"
									href=""
									class="btn btn-success btn-icon-split border-bottom-danger"
								>
									<span class="icon text-white-50">
										<i class="fas fa-check"></i>
									</span>
									<span class="text">Confirmation</span>
								</button>
							</form>
							<form
								action="/admin/booking/<%= booking.id%>/reject?_method=PUT"
								method="POST"
								class="ml-4"
							>
								<button
									type="submit"
									href=""
									class="btn btn-danger btn-icon-split border-bottom-success"
								>
									<span class="icon text-white-50">
										<i class="fas fa-times"></i>
									</span>
									<span class="text">Reject</span>
								</button>
							</form>
							<% } %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
