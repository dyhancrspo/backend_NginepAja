<!-- DataTales Example -->

<div class="card shadow mb-4">
	<div class="card-header py-3"></div>
	<div class="card-body animated--grow-in">
		<div class="table-responsive">
			<table
				class="table table-bordered"
				id="dataTable"
				width="100%"
				cellspacing="0"
			>
				<thead>
					<tr>
						<th>No</th>
						<th>Invoice</th>
						<th>Booking Date</th>
						<th>Title</th>
						<th>Name Member</th>
						<th>Status</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					<% for(let i = 0; i < booking.length; i++) { %>
					<tr>
						<td><%= i + 1 %></td>
						<td>#<%= booking[i].invoice %></td>
						<td>
							<%= booking[i].bookingStartDate.toLocaleDateString() %> ~ <%=
							booking[i].bookingEndDate.toLocaleDateString() %>
						</td>
						<td><%= booking[i].itemId.title %></td>
						<td>
							<%= booking[i].memberId.firstName %> <%=
							booking[i].memberId.lastName %>
						</td>
						<td><%= booking[i].payments.status %></td>

						<td>
							<a
								href="/admin/booking/<%= booking[i]._id %>"
								class="btn btn-success btn-circle btn-sm button-update"
								><i class="fas fa-eye"></i
							></a>
						</td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</div>
