
<%- include('../../partials/header.ejs')%>

<!-- Page Wrapper -->
		<div id="wrapper">
			<!-- Sidebar -->
		<%- include('../../partials/sidebar.ejs')%>
			<!-- End of Sidebar -->

			<!-- Content Wrapper -->
			<div id="content-wrapper" class="d-flex flex-column">
				<!-- Main Content -->
				<div id="content">
					<!-- Topbar -->
					<%- include('../../partials/navbar.ejs')%>

					<!-- End of Topbar -->

					<!-- Begin Page Content -->
					<div class="container-fluid">
						<%- include('../../partials/message.ejs') %>

						<!-- Page Heading -->
						<h1 class="h3 mb-4 text-gray-800 animated--fade-in">Dashboard - Item</h1>
						<!-- End of Page Heading -->
						
						<% if(action == "view") { %>
							<ul class="nav nav-tabs" id="myTab" role="tablist">
								<li class="nav-item">
									<a class="nav-link active" id="home-tab" data-toggle="tab" href="#show-item" role="tab" aria-controls="home" aria-selected="true"><i class="fas fa-camera-retro"></i
										> Show Item</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" id="profile-tab" data-toggle="tab" href="#add-item" role="tab" aria-controls="profile" aria-selected="false" >
										<i class="fas fa-plus"> </i>
										Add Item
									</a>
								</li>
							</ul>							
							<div class="tab-content" id="myTabContent">
								<%- include("show_table_item.ejs") %>
								<%- include("add_item.ejs") %>
							</div>
							<% } else if(action == 'show image') { %>
								<ul class="nav nav-tabs" id="myTab" role="tablist">
									<li class="nav-item">
										<a class="nav-link active" id="home-tab" data-toggle="tab" href="#show-image" role="tab" aria-controls="home" aria-selected="true">Show Image</a>
									</li>
								
									<li class="nav-item" style="margin-left: 720px">
										<a href="/admin/item" class="btn btn-danger btn-icon-split">
											<span class="icon text-white-50">
												<i class="fas fa-exclamation-triangle"></i>
											</span>
											<span class="text">Back</span>
										</a>
									</li>
								</ul>							
								<div class="tab-content" id="myTabContent">
									<%- include('show_image_item.ejs') %>
								</div>
							<% }else{ %>
								<ul class="nav nav-tabs" id="myTab" role="tablist">
									<li class="nav-item">
										<a class="nav-link active" id="home-tab" data-toggle="tab" href="#edit-item" role="tab" aria-controls="home" aria-selected="true">Edit Item</a>
									</li>
								</ul>							
								<div class="tab-content" id="myTabContent">
									<%- include('edit_item.ejs') %>
								</div>
							<% } %> 
			<!-- DataTales Example -->



					</div>
					<!-- /.container-fluid -->
				</div>
				<!-- End of Main Content -->

				<!-- Footer -->
				<%- include('../../partials/footer.ejs')%>
				<!-- End of Footer -->
			</div>
			<!-- End of Content Wrapper -->
		</div>
		<!-- End of Page Wrapper -->

		<!-- Scroll to Top Button-->
		<a class="scroll-to-top rounded" href="#page-top">
			<i class="fas fa-angle-up"></i>
		</a>

		<!-- Logout Modal-->
		<div
			class="modal fade"
			id="logoutModal"
			tabindex="-1"
			role="dialog"
			aria-labelledby="exampleModalLabel"
			aria-hidden="true"
		>
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
						<button
							class="close"
							type="button"
							data-dismiss="modal"
							aria-label="Close"
						>
							<span aria-hidden="true">Ã—</span>
						</button>
					</div>
					<div class="modal-body">
						Select "Logout" below if you are ready to end your current session.
					</div>
					<div class="modal-footer">
						<button
							class="btn btn-secondary"
							type="button"
							data-dismiss="modal"
						>
							Cancel
						</button>
						<a class="btn btn-primary" href="/admin/logout">Logout</a>
					</div>
				</div>
			</div>
		</div>

		<!-- Javascript -->
		<%- include('../../partials/js.ejs')%>


		<script>
			CKEDITOR.replace( 'about' );
	</script>
	</body>
</html>
